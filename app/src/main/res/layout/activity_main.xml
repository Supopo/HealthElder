<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.MainViewModel" />
    </data>

    <RelativeLayout
        android:background="@color/color_252525"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/line" />

        <View
            android:layout_alignParentBottom="true"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49" />

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/bottom_bg1"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_menu1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_weight="1"
                android:drawableBottom="@mipmap/line_bq"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/color_252525"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_menu2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="直播"
                android:textColor="@color/color_9292"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/iv_live"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/icon_kszb" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_menu3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/color_9292"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_menu4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/color_9292"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>
</layout>
