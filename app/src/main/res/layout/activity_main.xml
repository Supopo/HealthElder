<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.MainViewModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/line" />
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_alignParentBottom="true" />
            <View
                android:id="@+id/line_bottom"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_above="@id/ll_menu"
                android:background="#80969696" />
            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:gravity="top"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_menu1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_menu1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:drawableBottom="@mipmap/line_bq_white"
                        android:drawablePadding="@dimen/dp_2"
                        android:gravity="center_horizontal"
                        android:text="首页"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_menu2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_menu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center_horizontal"
                        android:text="好物"
                        android:textColor="@color/color_9292"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_live"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_32"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/icon_kszb" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_menu3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_menu3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center_horizontal"
                        android:text="消息"
                        android:textColor="@color/color_9292"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:background="@drawable/bg_num_red"
                        android:id="@+id/unread"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_menu4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_menu4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center_horizontal"
                        android:text="我的"
                        android:textColor="@color/color_9292"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="@dimen/dp_259"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:paddingTop="@dimen/dp_28"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/slide_bar_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
