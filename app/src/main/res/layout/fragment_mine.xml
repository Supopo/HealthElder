<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.moduleMine.viewModel.MineViewModel" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_666">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:background="@mipmap/wode_bg">

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/riv_photo3"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_56"
                android:visibility="invisible"
                app:qmui_is_circle="true" />


            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_56"
                android:layout_toRightOf="@id/riv_photo3"
                android:gravity="center_vertical"
                android:text="@{viewModel.userInfo.nickname}"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_54"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@mipmap/icon_more_wode" />

        </RelativeLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_top"
            android:layout_marginTop="-50dp">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/iv_bg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true" />


                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_19"
                                android:layout_marginTop="@dimen/dp_50"
                                android:gravity="start|bottom"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:paddingTop="@dimen/dp_16"
                                android:text="@{viewModel.userInfo.nickname}"
                                android:textSize="@dimen/sp_20"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_userId"
                                android:layout_width="@dimen/dp_84"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_name"
                                android:layout_marginLeft="@dimen/dp_19"
                                android:layout_marginTop="@dimen/dp_12"
                                android:layout_marginBottom="@dimen/dp_16"
                                android:gravity="center"
                                android:textColor="@color/gray_999"
                                android:textSize="@dimen/sp_13" />

                            <LinearLayout
                                android:id="@+id/ll_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_userId"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginBottom="@dimen/dp_16"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_20"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_hz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_1"
                                    android:layout_marginRight="@dimen/dp_27"
                                    android:text="获赞"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_20"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_gz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_1"
                                    android:layout_marginRight="@dimen/dp_27"
                                    android:text="关注"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_20"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_fs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_1"
                                    android:layout_marginRight="@dimen/dp_27"
                                    android:text="粉丝"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_below="@id/ll_info"
                                android:background="@color/color_EAEAEA" />

                            <TextView
                                android:id="@+id/tv_sbj"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ll_info"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginRight="@dimen/dp_16"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/gray_666" />

                            <LinearLayout
                                android:id="@+id/ll_tag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_sbj"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_16"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_tag"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/dp_5"
                                    android:paddingTop="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_6">

                                    <ImageView
                                        android:id="@+id/iv_sex"
                                        android:layout_width="@dimen/dp_10"
                                        android:layout_height="@dimen/dp_13"
                                        android:layout_marginRight="@dimen/dp_4"
                                        android:background="@mipmap/zy_female"
                                         />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/dp_4"
                                        android:background="@mipmap/zy_male"
                                         />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/sp_11" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_4"
                                    android:layout_marginRight="@dimen/dp_4"
                                    android:background="@drawable/bg_tag"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/dp_5"
                                    android:paddingTop="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_6"
                                    android:textSize="@dimen/sp_11" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_tag"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:paddingLeft="@dimen/dp_5"
                                    android:paddingTop="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_6"
                                    android:textSize="@dimen/sp_11" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_10"
                                android:layout_below="@id/ll_tag"
                                android:layout_marginTop="@dimen/dp_12"
                                android:background="@color/color_F3F3F3" />

                            <TextView
                                android:id="@+id/tv_order"
                                android:layout_width="@dimen/dp_84"
                                android:layout_height="@dimen/dp_38"
                                android:layout_below="@id/iv_bg"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_7"
                                android:background="@drawable/bg_mine_order"
                                android:gravity="center"
                                android:text="我的订单"
                                android:textSize="@dimen/sp_13"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_friends"
                                android:layout_width="@dimen/dp_74"
                                android:layout_height="@dimen/dp_38"
                                android:layout_below="@id/iv_bg"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_marginRight="@dimen/dp_4"
                                android:layout_toLeftOf="@id/tv_order"
                                android:background="@drawable/bg_mine_bjzl"
                                android:gravity="center"
                                android:text="+朋友"
                                android:textSize="@dimen/sp_13"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_edit"
                                android:layout_width="@dimen/dp_84"
                                android:layout_height="@dimen/dp_38"
                                android:layout_below="@id/iv_bg"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_toLeftOf="@id/tv_friends"
                                android:background="@drawable/bg_mine_bjzl"
                                android:gravity="center"
                                android:text="编辑资料"
                                android:textSize="@dimen/sp_13"
                                android:textStyle="bold" />

                        </RelativeLayout>


                        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                            android:id="@+id/riv_photo"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:visibility="invisible"
                            app:qmui_border_color="@color/white"
                            app:qmui_border_width="@dimen/dp_1"
                            app:qmui_is_circle="true" />
                    </RelativeLayout>


                </com.google.android.material.appbar.CollapsingToolbarLayout>


                <LinearLayout
                    android:id="@+id/ll_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_zp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="作品"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/ll_sm"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_sm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_5"
                                android:text="私密"
                                android:textColor="@color/gray_666" />

                            <ImageView
                                android:id="@+id/iv_sm"
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_13"
                                android:background="@mipmap/wode_sm_nor" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_zg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="赞过"
                            android:textColor="@color/gray_666" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/color_EAEAEA" />
                </LinearLayout>


            </com.google.android.material.appbar.AppBarLayout>

            <!--        app:layout_behavior="@string/appbar_scrolling_view_behavior" 滑动的-->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_7" />


            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/riv_photo2"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_below="@id/rl_top"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="-50dp"
            app:qmui_border_color="@color/white"
            app:qmui_border_width="@dimen/dp_1"
            app:qmui_is_circle="true"
            app:url="@{viewModel.userInfo.avatarUrl}" />
    </RelativeLayout>
</layout>