<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.moduleHome.viewModel.XxxViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_50"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_menu1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@color/green"
                android:gravity="center"
                android:text="打开本地的小程序"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/green"
                android:gravity="center"
                android:text="打开线上小程序"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/green"
                android:gravity="center"
                android:text="下载线上小程序"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/green"
                android:gravity="center"
                android:text="设置直播间密码"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/green"
                android:gravity="center"
                android:text="开启直播商品列表"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="登陆页面"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu7"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="开启直播间设置Pop"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu8"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="实名认证"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu101"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="短视频"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menu9"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="进入直播间"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_menu102"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="短视频不给他看"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_menu103"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="短视频发布"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_menu104"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="短视频草稿箱打开"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_menu105"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/green"
                android:gravity="center"
                android:text="打开短视频"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
