<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_252525"
        android:textStyle="bold"
        android:text="焯一焯，拌一拌，五分钟做好一道爽口肉！"/>

    <com.xaqinren.healthyelders.widget.VideoPublishEditTextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:text="今天分享一道超级简单又快手的下饭菜！肥牛卷下水一焯水，各式调味一拌，就完成了，酸辣的酱汁包裹着贤能的肥牛卷，超级下饭！大家快安排上吧！ 【食材准备】 肥牛300g、先交、小米蕉、辣椒面、香菜、熟芝麻、生抽、陈醋、蚝油 1、调酱汁：碗中放入蒜末、辣椒面、青红椒圈、报纸吗淋上热油+两勺生抽+两勺陈醋+一勺蚝油+少许盐和白糖拌匀。 2、冷水放入肥牛和1勺了牛煮至肥牛变色捞出放入碗里，倒入酱料、香菜拌匀即可～"
        android:editable="false"
        android:background="@null"
        />

    <TextView
        android:id="@+id/edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/gray_999"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_14"
        android:text="编辑于 04-26"/>

    <View style="@style/line" />

    <TextView
        android:id="@+id/comment_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/gray_999"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:text="共 166 条评论"/>
</LinearLayout>