<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.moduleLiteav.viewModel.VideoEditerViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">
        <com.tencent.qcloud.ugckit.UGCKitVideoEdit
            android:id="@+id/video_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:id="@+id/icon_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_close"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_54"/>
            <LinearLayout
                android:id="@+id/sel_music"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_32"
                android:orientation="horizontal"
                android:background="@drawable/bg_choose_music"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/icon_ship_yiny"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:text="选择音乐"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/right_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_38"
                >
                <LinearLayout
                    android:id="@+id/jianji_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_16"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:src="@mipmap/shp_icon_jianji"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="4dp"
                        android:text="剪辑"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tiezhi_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_below="@id/jianji_layout"
                    android:layout_marginRight="@dimen/dp_28"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:src="@mipmap/shp_icon_tiezhi"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="4dp"
                        android:text="贴纸"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/action_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/tiezhi_layout"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_28"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:src="@mipmap/shp_icon_texiao"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="4dp"
                        android:text="特效"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/beauty_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/action_layout"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_28"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:src="@mipmap/shp_icon_lvjing"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="4dp"
                        android:text="滤镜"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/zimu_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/beauty_layout"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_28"
                    >
                    <ImageView
                        android:id="@+id/scale_iv"
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:src="@mipmap/shp_icon_zimu"/>

                    <TextView
                        android:id="@+id/scale_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="4dp"
                        android:text="字幕"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/speed_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/zimu_layout"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_28"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:src="@mipmap/shp_icon_sd"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="4dp"
                        android:text="速度"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/publish"
                android:layout_width="@dimen/dp_343"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@drawable/bg_btn_comfrim_shape"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:text="下一步"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/effect_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <com.tencent.qcloud.ugckit.component.floatlayer.FloatLayerViewGroup
                android:id="@+id/paster_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.tencent.qcloud.ugckit.component.floatlayer.FloatLayerViewGroup
                android:id="@+id/bubble_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/video_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <com.tencent.qcloud.ugckit.module.effect.PlayControlLayout
                    android:id="@+id/play_control_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:background="@color/ugckit_editer_bottom"
                    android:orientation="horizontal" />

                <com.tencent.qcloud.ugckit.module.effect.TimeLineView
                    android:id="@+id/timeline_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_below="@+id/play_control_layout"
                    android:background="@color/ugckit_editer_bottom" />

                <com.tencent.qcloud.ugckit.component.slider.VideoCutView
                    android:id="@+id/video_edit_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/play_control_layout"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/fragment_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:layout_alignParentBottom="true"
                />

            <com.tencent.qcloud.ugckit.module.effect.paster.view.PasterPannel
                android:id="@+id/paster_select_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:layout_alignParentBottom="true"
                android:visibility="gone" />

            <com.tencent.qcloud.ugckit.module.effect.bubble.BubbleSubtitlePannel
                android:id="@+id/bubble_setting_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:layout_alignParentBottom="true"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="使用"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>