<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.moduleHome.bean.VideoInfo" />

        <import type="android.view.View" />
    </data>


    <RelativeLayout
        android:background="@{viewModel.placeholderRes}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_6">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_34"
                    android:layout_centerInParent="true"
                    android:src="@color/color_EAEAEA"
                    app:qmui_border_color="@color/qmui_s_transparent"
                    app:qmui_is_circle="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </LinearLayout>

        <com.xaqinren.healthyelders.widget.VideoPublishEditTextView
            android:id="@+id/descTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_name"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@null"
            android:editable="false"
            android:maxLines="3"
            android:text="内容"
            android:textColor="@color/color_252525"
            android:textSize="@dimen/sp_16" />


        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/riv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_444"
            android:layout_below="@id/descTextView"
            android:layout_marginBottom="@dimen/dp_12"
            android:src="@color/yellow"
            app:qmui_border_color="@color/transparent"
            app:qmui_corner_radius="@dimen/dp_4" />


        <LinearLayout
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_below="@id/riv_cover"
            android:id="@+id/ll_tag"
            android:background="@drawable/bg_tag_search_article"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="@dimen/dp_3"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_12"
                android:background="@color/colorRed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海苔拌饭"
                android:textColor="@color/color_252525"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@id/ll_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:background="@mipmap/icon_zan_gary"
                />


            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/sp_14"
                android:text="100w"
                android:layout_width="@dimen/dp_55"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:background="@mipmap/icon_pl_gray"
                />


            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/sp_14"
                android:text="100"
                android:layout_width="@dimen/dp_55"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:background="@mipmap/icon_share_gray"
                />


            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/sp_14"
                android:text="100w"
                android:layout_width="@dimen/dp_55"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>

</layout>
