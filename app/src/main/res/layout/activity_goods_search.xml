<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/main_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_9"
                android:padding="@dimen/dp_7"/>
            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:background="@drawable/bg_search_cir"
                android:drawableLeft="@mipmap/icon_search_weiz"
                android:layout_toRightOf="@id/back_iv"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_54"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_252525"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_8"
                android:singleLine="true"
                android:ellipsize="end"
                android:imeOptions="actionSearch"/>

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_search_del"
                android:layout_alignRight="@id/search"
                android:layout_alignTop="@id/search"
                android:layout_alignBottom="@id/search"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_12"/>
            <TextView
                android:id="@+id/search_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/gray_999"
                android:text="搜索"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_16"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">
            <TextView
                android:id="@+id/order1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@drawable/color_red_gray"
                android:textSize="@dimen/sp_14"
                android:drawablePadding="@dimen/dp_5"
                android:text="综合"/>
            <TextView
                android:id="@+id/order2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@drawable/color_red_gray"
                android:textSize="@dimen/sp_14"
                android:drawablePadding="@dimen/dp_5"
                android:text="销量"/>
            <TextView
                android:id="@+id/order3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@drawable/color_red_gray"
                android:textSize="@dimen/sp_14"
                android:drawablePadding="@dimen/dp_5"
                android:text="自营"
                android:gravity="center"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/order4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/color_red_gray"
                    android:textSize="@dimen/sp_14"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="价格"
                    />

                <ImageView
                    android:id="@+id/order"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/jiag_drop_nor"
                    android:layout_marginLeft="@dimen/dp_5"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/layout_type"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_20"
                android:src="@mipmap/icon_liebiao1"/>
        </LinearLayout>

        <View style="@style/line" />
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFF8F8F8">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>