<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_pop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_332"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_pop_bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/color_252525"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@color/color_EAEAEA" />

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="开播设置"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_below="@id/tv_title1"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="直播间介绍"
                    android:textColor="@color/color_252525"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="添加"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:background="@mipmap/icon_next_g" />

            </LinearLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/ll_menu"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/color_EAEAEA" />

            <LinearLayout
                android:id="@+id/ll_menu1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_below="@id/ll_menu"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开播提醒"
                    android:textColor="@color/color_252525"
                    android:textSize="@dimen/sp_14" />

                <com.xaqinren.healthyelders.widget.SwitchButton
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_31"
                    app:sb_background="@color/color_E9E9A"
                    app:sb_checked_color="@color/color_34C"
                    app:sb_shadow_color="@color/transparent"
                    app:sb_show_indicator="false"
                    app:sb_uncheck_color="@color/color_E9E9A" />

            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/ll_menu1"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/color_EAEAEA" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_menu1"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_15"
                android:text="功能权限"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/ll_menu2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_below="@id/tv_title2"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="允许观众录制"
                    android:textColor="@color/color_252525"
                    android:textSize="@dimen/sp_14" />

                <com.xaqinren.healthyelders.widget.SwitchButton
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_31"
                    app:sb_background="@color/color_E9E9A"
                    app:sb_checked_color="@color/color_34C"
                    app:sb_shadow_color="@color/transparent"
                    app:sb_show_indicator="false"
                    app:sb_uncheck_color="@color/color_E9E9A" />

            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/ll_menu2"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/color_EAEAEA" />

            <LinearLayout
                android:id="@+id/ll_menu3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_below="@id/ll_menu2"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="允许观众送礼物"
                    android:textColor="@color/color_252525"
                    android:textSize="@dimen/sp_14" />

                <com.xaqinren.healthyelders.widget.SwitchButton
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_31"
                    app:sb_background="@color/color_E9E9A"
                    app:sb_checked_color="@color/color_34C"
                    app:sb_shadow_color="@color/transparent"
                    app:sb_show_indicator="false"
                    app:sb_uncheck_color="@color/color_E9E9A" />

            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/ll_menu3"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/color_EAEAEA" />

        </RelativeLayout>
    </RelativeLayout>


</layout>