<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_88"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_126"
            android:layout_height="@dimen/dp_93"
            android:background="@mipmap/no_goods_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="暂无直播商品"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="@dimen/dp_124"
        android:layout_height="@dimen/dp_36"
        android:layout_below="@id/ll_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/bg_btn_comfrim_shape"
        android:gravity="center"
        android:text="去添加"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

</RelativeLayout>