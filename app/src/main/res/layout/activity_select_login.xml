<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.moduleLogin.viewModel.SelectLoginViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_375"
            android:background="@mipmap/bg_login" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_163"
            android:background="@mipmap/login_logo" />

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_38"
            android:text="欢迎使用健康长老"
            android:textColor="@color/color_252525"
            android:textSize="@dimen/sp_26"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_show"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_11"
            android:text="直播 / 购物 / 养生 /娱乐"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/btn_login2"
            android:layout_width="@dimen/dp_315"
            android:layout_height="@dimen/dp_48"
            android:layout_above="@id/iv_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_36"
            android:background="@mipmap/btn_login"
            android:gravity="center"
            android:text="微信登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_select"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="手机登录"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_above="@id/tv_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@mipmap/login_phone" />


        <RelativeLayout
            android:id="@+id/rl_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_27">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:background="@mipmap/login_rad_nor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_toRightOf="@id/iv_select"
                android:text="已同意用户协议"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_11" />

        </RelativeLayout>


    </RelativeLayout>
</layout>
