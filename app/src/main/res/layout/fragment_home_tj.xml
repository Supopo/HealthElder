<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.moduleHome.viewModel.HomeTJViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.xaqinren.healthyelders.moduleHome.LockableNestedScrollView
                android:id="@+id/nsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.xaqinren.healthyelders.moduleHome.widget.LoadingView
                        android:id="@+id/loadView"
                        style="@style/Layout.Wrap"
                        android:layout_centerInParent="true" />


                    <RelativeLayout
                        android:id="@+id/rl_top"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_237">

                        <RelativeLayout
                            android:id="@+id/rl_menu1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_95"
                            android:background="@mipmap/home_topbg"
                            android:paddingTop="@dimen/dp_44">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_menu1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_toLeftOf="@id/iv_search"
                                android:overScrollMode="never" />

                            <ImageView
                                android:id="@+id/iv_search"
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/dp_12"
                                android:layout_marginBottom="@dimen/dp_11"
                                android:background="@mipmap/home_search_gray" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_142"
                            android:layout_below="@id/rl_menu1"
                            android:background="@color/white">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_menu2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:overScrollMode="never" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl_top"
                        android:orientation="vertical" />
                </RelativeLayout>
            </com.xaqinren.healthyelders.moduleHome.LockableNestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/ll_showTop"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_26"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_125"
            android:background="@drawable/btn_2top"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_showZb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="回到首页"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_4"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:background="@mipmap/home_dropdown" />
        </LinearLayout>
    </RelativeLayout>
</layout>
