<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <!--    随机背景颜色-->
    <!--    android:background="@{viewModel.placeholderRes}"-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ll_item"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_9"
            android:background="@drawable/bg_search_tag"
            android:minWidth="@dimen/dp_64"
            android:paddingLeft="@dimen/dp_11"
            android:paddingRight="@dimen/dp_11"
            >


            <LinearLayout
                android:id="@+id/ll_pbc"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="屏蔽词"
                    android:textColor="@color/color_252525"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:id="@+id/rl_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@mipmap/pbc_del" />

                </RelativeLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerInParent="true"
                android:background="@mipmap/pbc_add" />


        </RelativeLayout>
    </RelativeLayout>
</layout>
