<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="data"
            type="com.xaqinren.healthyelders.moduleMine.bean.WalletBean" />
    </data>

    <LinearLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_108"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_13">
            <TextView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账方式"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_252525"
                android:layout_marginTop="@dimen/dp_35"/>

            <LinearLayout
                android:id="@+id/layout_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:layout_alignTop="@id/iv1"
                android:layout_toRightOf="@id/iv1"
                android:layout_marginLeft="@dimen/dp_30"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/bank_logo"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/card_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:textSize="@dimen/sp_15"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignTop="@id/iv1"
                android:layout_toRightOf="@id/iv1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:visibility="gone">
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/icon_fx_wechat"/>
                <TextView
                    android:id="@+id/wx_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信132****1978"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:textSize="@dimen/sp_15"
                   />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_lq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignTop="@id/iv1"
                android:layout_toRightOf="@id/iv1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:visibility="gone">
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/zhifu_lingq"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现到零钱"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:textSize="@dimen/sp_15"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv1"
                android:layout_below="@id/iv1"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_48"
                android:text="2小时到账"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/gray_999"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv1"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_FFF8F8F8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="@color/color_252525"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_13"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/color_252525"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_16"/>

            <EditText
                android:id="@+id/input_amount"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/color_252525"
                android:maxLength="15"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:maxLines="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

            <TextView
                android:id="@+id/all_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_F81E4D"
                android:layout_marginRight="@dimen/dp_16"
                android:text="全部"/>
        </LinearLayout>
        <View style="@style/lineMarginDp16" android:layout_marginTop="@dimen/dp_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单比最低1元，单日可提现上线10000元"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/gray_999"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"/>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_40"
            android:text="下一步"
            android:textColor="@color/white"
            android:gravity="center"
            android:enabled="false"
            android:background="@drawable/bg_btn_comfrim_has_enable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_11">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续即同意 "
                android:textSize="@dimen/sp_13"
                android:textColor="@color/gray_999"/>
            <TextView
                android:id="@+id/service_clause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《服务条款》"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_F81E4D"/>
        </LinearLayout>
    </LinearLayout>
</layout>