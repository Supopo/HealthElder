<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.xaqinren.healthyelders.moduleHome.viewModel.HomeViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xaqinren.healthyelders.moduleHome.LockableNestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:overScrollMode="never">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_allTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/home_topbg">

                        <RelativeLayout
                            android:id="@+id/rl_top_title"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_95"
                            android:paddingTop="@dimen/dp_44">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rl_menu1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_toLeftOf="@id/iv_search"
                                android:overScrollMode="never" />

                            <ImageView
                                android:id="@+id/iv_search"
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/dp_12"
                                android:layout_marginBottom="@dimen/dp_11"
                                android:background="@mipmap/home_search_gray" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_142"
                            android:layout_below="@id/rl_top_title"
                            android:background="@color/white">

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginLeft="@dimen/dp_12"
                                android:id="@+id/rv_menu2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:overScrollMode="never" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_zbList"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_218"
                        android:background="@color/color_252525"
                        android:paddingTop="@dimen/dp_93"
                        android:visibility="gone">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginLeft="@dimen/dp_10"
                            android:id="@+id/rv_zbList"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_125"
                            android:background="@color/color_252525" />
                    </RelativeLayout>
                </RelativeLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rl_allTop"
                    android:overScrollMode="never" />
            </RelativeLayout>
        </com.xaqinren.healthyelders.moduleHome.LockableNestedScrollView>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_showTop"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_26"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_125"
            android:background="@drawable/btn_2top"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_showZb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="回到首页"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_4"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:background="@mipmap/home_dropdown" />
        </LinearLayout>
        <!--        推荐 关注 附近-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_tabMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_44">

            <ImageView
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_27"
                android:background="@mipmap/home_zhib"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:background="@mipmap/home_search_gray"
                />

            <!--            去掉点击水波纹-->
            <!--            app:tabBackground="@android:color/transparent"-->
            <!--            app:tabRippleColor="@android:color/transparent"-->


            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                app:tabBackground="@android:color/transparent"
                app:tabMode="fixed"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="#d1d1d1"
                app:tl_tab_padding="@dimen/dp_13"
                app:tl_indicator_margin_bottom="@dimen/dp_6"
                app:tl_indicator_margin_top="@dimen/dp_6"
                app:tl_indicator_width="@dimen/dp_16"
                app:tl_textBold="SELECT"
                app:tl_textSelectsize="@dimen/sp_22"
                app:tl_textsize="@dimen/sp_18" />

        </RelativeLayout>
    </RelativeLayout>
</layout>
