<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:src="@mipmap/default_avatar"/>
            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-black"
                android:layout_toRightOf="@id/avatar"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="养生桃桃酱"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_252525"
                android:layout_marginTop="@dimen/dp_4"/>
            <TextView
                android:id="@+id/fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-black"
                android:layout_toRightOf="@id/avatar"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_alignBottom="@id/avatar"
                android:text="粉丝总数：3.7W"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/gray_999"
                android:layout_marginBottom="@dimen/dp_4"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_cir_4"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@drawable/color_text_black_gray"/>
                <TextView
                    android:id="@+id/seven_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前7天"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:textColor="@drawable/color_text_black_gray"/>
                <TextView
                    android:id="@+id/month_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前30天"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@drawable/color_text_black_gray"/>
            </LinearLayout>
            <View style="@style/line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/gift_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_252525"
                        android:textStyle="bold"
                        android:text="404"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/gray_999"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="收货礼物"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/audience_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_252525"
                        android:textStyle="bold"
                        android:text="404"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/gray_999"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="观众总数"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/new_fans_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_252525"
                        android:textStyle="bold"
                        android:text="404"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/gray_999"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="新增粉丝"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/pay_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_252525"
                        android:textStyle="bold"
                        android:text="404"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/gray_999"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="付费人数"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播管理"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/gray_999"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/store_showcase"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_6">
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/zbzx_icon_spcc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品橱窗"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_252525"
                android:layout_marginLeft="@dimen/dp_11"
                android:drawableRight="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16">
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/zbzx_icon_kef"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的客服"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_252525"
                android:layout_marginLeft="@dimen/dp_11"
                android:drawableRight="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16">
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/zbzx_icon_qianb"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的钱包"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_252525"
                android:layout_marginLeft="@dimen/dp_11"
                android:drawableRight="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/anchor_agree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16">
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/zbzx_icon_qianb"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="主播入驻协议"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_252525"
                android:layout_marginLeft="@dimen/dp_11"
                android:drawableRight="@drawable/arrow_right"/>
        </LinearLayout>
    </LinearLayout>
</layout>