<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="@dimen/dp_166"
        android:layout_height="@dimen/dp_265">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:qmui_border_width="0dp"
            app:qmui_corner_radius="@dimen/dp_4" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_showZhibo"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/btn_2top"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_6"
            >

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_3"
                android:background="@mipmap/zhiboz_circle" />

            <TextView
                android:id="@+id/tv_showZb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="直播中"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>



        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_video"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_28"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_ship_yiny_bof" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_info"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_5"
                app:qmui_is_circle="true" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>