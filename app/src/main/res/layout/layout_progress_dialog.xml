<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_download">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="12.5dp"
            android:src="@drawable/picture_icon_close" />

        <com.xaqinren.healthyelders.widget.RingProgressBar
            android:id="@+id/progressbar_dialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:max="100"
            app:ringColor="@android:color/white"
            app:ringProgressColor="@color/colorPrimary"
            app:ringWidth="3dp"
            app:style="STROKE"
            app:barTextColor="@color/white"
            app:textIsShow="true"
            app:barTextSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressbar_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="正在下载"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>